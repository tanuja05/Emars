    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >

 <com.fw.GalleryWidget.GalleryViewPager
      android:id="@+id/viewPagerMy"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
