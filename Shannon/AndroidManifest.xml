<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.srm.srmodel"
    android:versionCode="5"
    android:versionName="1.5" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.SET_WALLPAPER" />
    <uses-permission android:name="android.permission.SET_WALLPAPER_HINTS" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="com.android.vending.BILLING" />
    <uses-permission android:name="com.android.vending.CHECK_LICENSE" >
    </uses-permission>

    <application
        android:manageSpaceActivity="com.srm.srmodel.ManageSpaceActivity"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.srm.srmodel.FirstActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.srm.srmodel.SecondScreenActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.srm.srmodel.TalkAussie"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.srm.srmodel.SplashActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.srm.srmodel.OptionsActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.srm.srmodel.TestConnect"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.srm.srmodel.ShareOnFacebook"
            android:screenOrientation="portrait" >
        </activity>
        <activity android:name="com.srm.srmodel.GalleryActivity" >
        </activity>
        <activity
            android:name="com.srm.srmodel.FullActivity"
            android:label="@string/title_activity_full" >
        </activity>
       <activity
    android:name="com.srm.srmodel.ManageSpaceActivity"
    android:screenOrientation="portrait" />
         <service android:name="com.srm.srmodel.WallpaperService"></service>
    </application>

</manifest>
